# ===========================================
# Dheya Platform Environment Variables
# ===========================================
# Copy this file to .env and fill in the values

# Database (Required)
# PostgreSQL connection string
DATABASE_URL="postgresql://username:password@localhost:5432/dheya?schema=public"

# NextAuth.js (Required)
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-super-secret-key-min-32-characters"
# Your app URL (set to production URL when deploying)
NEXTAUTH_URL="http://localhost:3000"

# Google OAuth (Optional)
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Email - Resend (Optional)
# Get from: https://resend.com
RESEND_API_KEY=""

# Public URL (Optional)
# Used for SEO and social sharing
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ===========================================
# Payment Integration - Razorpay
# ===========================================
# Get from: https://dashboard.razorpay.com/app/keys
# Use test keys for development (start with rzp_test_)
RAZORPAY_KEY_ID="rzp_test_your_key_id"
RAZORPAY_KEY_SECRET="your_key_secret"
# Public key for frontend checkout
NEXT_PUBLIC_RAZORPAY_KEY_ID="rzp_test_your_key_id"

# Razorpay Webhook Secret (Optional)
# For handling payment webhooks
RAZORPAY_WEBHOOK_SECRET=""

# ===========================================
# Video Meeting Integration
# ===========================================
# Jitsi Meet (Free, no account needed)
NEXT_PUBLIC_JITSI_DOMAIN="meet.jit.si"

# Zoom (Optional - for future integration)
# Get from: https://marketplace.zoom.us/develop/create
ZOOM_CLIENT_ID=""
ZOOM_CLIENT_SECRET=""
ZOOM_ACCOUNT_ID=""

# ===========================================
# Production Notes:
# ===========================================
# 1. Use a production PostgreSQL database (Supabase, Railway, etc.)
# 2. Set NEXTAUTH_URL to your production domain
# 3. Configure Google OAuth callback URL in Google Console
# 4. Set up Resend for email notifications
# 5. Switch to Razorpay live keys (rzp_live_) for production
# 6. Consider using Zoom or Google Meet for enterprise video calls
